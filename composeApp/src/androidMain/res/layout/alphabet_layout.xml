<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/list_padding_top">

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_separator"
        android:background="#dbdbdb"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_padding_horizontal"
        android:paddingLeft="@dimen/list_padding_horizontal"
        android:paddingTop="@dimen/list_padding_top"
        android:paddingEnd="@dimen/list_padding_horizontal"
        android:paddingRight="@dimen/list_padding_horizontal"
        android:paddingBottom="@dimen/list_padding_top">

        <TextView
            android:id="@+id/letter"
            android:layout_width="@dimen/list_icon_width"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:paddingStart="@dimen/list_padding_top"
            android:paddingEnd="@dimen/list_padding_top"
            android:text="@string/alphabet_letter"
            android:textAlignment="center"
            android:textColor="@color/list_color_accent"
            android:textSize="@dimen/list_icon_text" />

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="@dimen/list_icon"
            android:layout_height="@dimen/list_icon"
            android:layout_marginLeft="@dimen/list_margin_horizontal"
            android:layout_marginRight="@dimen/list_margin_horizontal"
            android:contentDescription="@string/app_name"
            android:src="@drawable/favorite"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/list_padding_horizontal"
            android:paddingLeft="@dimen/list_padding_horizontal"
            android:paddingEnd="@dimen/list_padding_horizontal"
            android:paddingRight="@dimen/list_padding_horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="@string/alphabet_title"
                    android:textSize="@dimen/list_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="@string/alphabet_subtitle"
                    android:textSize="@dimen/list_subtitle" />

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subtitle"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="2"
                    android:text="@string/alphabet_summary"
                    android:textSize="@dimen/list_subtitle" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>