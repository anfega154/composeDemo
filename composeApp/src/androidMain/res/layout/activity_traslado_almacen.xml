<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".cmms.activity.TrasladoAlmacenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/container_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom_card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/horizontal_margin_card"
                android:paddingTop="@dimen/vertical_margin_card"
                android:paddingRight="@dimen/horizontal_margin_card"
                android:paddingBottom="@dimen/vertical_margin_card">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/almacen_destino"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/mSpinner"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:id="@+id/check_ip"
                    android:layout_marginBottom="@dimen/body_margin_text_card"
                    android:layout_marginTop="@dimen/body_margin_text_card"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_below="@id/mSpinner"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="sans-serif-ligth"
                        android:text="@string/traslado_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/ejecutar"
                        android:theme="@style/ColorSwitchStyle"
                        android:checked="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <EditText
                    android:id="@+id/observacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:scrollbars="vertical"
                    android:layout_below="@+id/check_ip"
                    android:hint="@string/observacion"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/container_filter"
            android:scrollbars="vertical"/>


        <RelativeLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:drawableTop="@drawable/bitacora_recursos"
                android:drawingCacheQuality="high"
                android:textAlignment="center"
                android:text="@string/lista_empty_almacen" />


        </RelativeLayout>


    </RelativeLayout>


    <com.mantum.component.adapter.MovableFloatingActionButton
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/floating_action_button"
        android:layout_marginRight="@dimen/floating_action_button"
        android:layout_marginBottom="@dimen/floating_action_button"
        fab:backgroundTint="@color/colorPrimary"
        fab:srcCompat="@drawable/camera" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>