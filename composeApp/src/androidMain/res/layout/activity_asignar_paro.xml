<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".cmms.activity.AsignarParoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/content_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fab:errorTextAppearance="@style/error_appearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:fontFamily="sans-serif-light"
                android:hint="@string/fecha"
                android:inputType="date|none" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_paros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginBottom="44dp"
            android:layout_marginHorizontal="3dp"/>

        <TextView
            android:id="@+id/agregar_paro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="3dp"
            android:padding="10dp"
            android:text="@string/agregar_paro"
            android:textColor="@color/white"
            android:layout_marginTop="-44dp"
            android:background="@drawable/background_button"
            android:textSize="18sp"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/ver_historico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/floating_action_button"
        android:layout_margin="@dimen/floating_action_button"
        android:text="@string/historico_paros_opcion"
        android:textColor="@color/white"
        android:textSize="16sp"
        fab:icon="@drawable/ic_historial_paros" />

</RelativeLayout>