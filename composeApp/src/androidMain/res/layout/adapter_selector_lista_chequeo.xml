<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/list_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/list_padding_horizontal"
        android:paddingLeft="@dimen/list_padding_horizontal"
        android:paddingTop="@dimen/list_padding_top"
        android:paddingEnd="@dimen/list_padding_horizontal"
        android:paddingRight="@dimen/list_padding_horizontal"
        android:paddingBottom="@dimen/list_padding_top">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:paddingStart="@dimen/list_padding_top"
            android:paddingEnd="@dimen/list_padding_top"
            android:textAlignment="center"
            android:theme="@style/ColorSwitchStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/list_padding_horizontal"
            android:paddingLeft="@dimen/list_padding_horizontal"
            android:paddingEnd="@dimen/list_padding_horizontal"
            android:paddingRight="@dimen/list_padding_horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:textSize="@dimen/list_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textSize="@dimen/list_subtitle" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textSize="@dimen/list_subtitle" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>